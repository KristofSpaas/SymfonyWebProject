{% extends 'base.html.twig' %}
{% form_theme edit_form 'AppBundle:Form:Formthemeoverwrite.html.twig' %}

{% block body %}
    <div class="jumbotron myPageHeader">
        <h1>Edit location</h1>
    </div>
    <div class="myPageContent">
        {{ form_start(delete_form) }}
        <input type="submit" value="Delete" class="btn btn-lg btn-danger pull-right">
        {{ form_end(delete_form) }}

        <br/>
        <br/>

        <div class="form" >
            {{ form_start(edit_form) }}
            <div class="form-group">
                {{ form_label(edit_form.lokaalnummer) }}
                {{ form_widget(edit_form.lokaalnummer) }}
                {{ form_errors(edit_form.lokaalnummer) }}
            </div>
            <input type="submit" value="Edit" class="btn btn-lg btn-success">
            {{ form_end(edit_form) }}
        </div>
        <hr/>
        <a class="btn btn-lg btn-primary" href="{{ path('showLocations') }}">Back to Locations</a>
    </div>

{% endblock %}
