{% extends 'base.html.twig' %}

{% block body %}
    <div class="jumbotron myPageHeader">
        <h1>Add doctor to location</h1>
    </div>

    <div class="myPageContent">
        <h2>Room {{ location.lokaalnummer }}</h2>

        <br/>

        <div class="form">
            {{ form_start(doctor_location_form) }}
            <div class="form-group">
                {{ form_label(doctor_location_form.doctors) }}
                {{ form_widget(doctor_location_form.doctors) }}
                {{ form_errors(doctor_location_form.doctors) }}
            </div>

            <input type="submit" value="Add doctor" class="btn btn-lg btn-success"/>
            {{ form_end(doctor_location_form) }}

        </div>
        <hr>
        <a href="{{ path('showLocations') }}" class="btn btn-lg btn-primary">Back to Locations</a>
    </div>

{% endblock %}
