{% extends 'base.html.twig' %}

{% block body %}
    <div class="jumbotron myPageHeader">
        <h1>Patients</h1>
    </div>
    <div class="myPageContent">
        <a href="{{ path('addPatient') }}" class="btn btn-lg btn-primary">Add Patient</a>
        <br/>
        <br/>
        <table class="records_list table table-striped">
            <thead>
            <tr>
                <th>Username</th>
                <th>Firstname</th>
                <th>Lastname</th>
                <th>Email</th>
                <th colspan="2"></th>
            </tr>
            </thead>
            <tbody>
            {% for user in users %}
                <tr>
                    <td><a href="{{ path('patientDetail', { 'id': user.id }) }}">{{ user.username }}</a></td>
                    <td>{{ user.firstname }}</td>
                    <td>{{ user.lastname }}</td>
                    <td>{{ user.email }}</td>
                    <td><a href="{{ path('patientDetail', { 'id': user.id }) }}" class="btn btn-md btn-primary">SHOW</a>
                    </td>
                    <td><a href="{{ path('editPatient', { 'id': user.id }) }}" class="btn btn-md btn-success">EDIT</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
