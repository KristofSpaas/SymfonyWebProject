{% extends 'base.html.twig' %}

{% block body %}
    <div class="jumbotron myPageHeader">
        <h1>Patient {{ patient.user.fullname }}</h1>
    </div>
    <div class="myPageContent">
        {{ form_start(delete_form) }}
        <div class="row">
            <div class="col-xs-12 col-md-6">
                <input type="submit" value="Delete" class="btn btn-lg btn-danger pull-right">
            </div>
        </div>
        {{ form_end(delete_form) }}

        {% if app.session.flashbag.has('danger') %}
            <div class="alert alert-danger">
                {% for message in app.session.flashbag.get('danger') %}
                    {{ message }}
                {% endfor %}
            </div>
        {% endif %}
        {% if app.session.flashbag.has('succes') %}
            <div class="alert alert-success">
                {% for message in app.session.flashbag.get('succes') %}
                    {{ message }}
                {% endfor %}
            </div>
        {% endif %}

        <br/>

        <div class="row">
            <div class="col-md-6 col-xs-12">
                <table class="record_properties table table-striped table-bordered">
                    <tbody>
                    <tr>
                        <th style="text-align: left">Username</th>
                        <td>{{ patient.user.username }}</td>
                    </tr>
                    <tr>
                        <th style="text-align: left">Firstname</th>
                        <td>{{ patient.user.firstname }}</td>
                    </tr>
                    <tr>
                        <th style="text-align: left">Lastname</th>
                        <td>{{ patient.user.lastname }}</td>
                    </tr>
                    <tr>
                        <th style="text-align: left">Email</th>
                        <td>{{ patient.user.email }}</td>
                    </tr>
                    </tbody>
                </table>
            </div>
        </div>

        <a href="{{ path('editPatient',{'id':patient.id}) }}" class="btn btn-lg btn-success">Edit</a>

        <hr/>
        <a class="btn btn-lg btn-primary" href="{{ path('showPatients') }}">Back to Patients</a>

    </div>
{% endblock %}
